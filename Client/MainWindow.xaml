<Window x:Class="UserClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid Margin="2">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="15"/>
			<ColumnDefinition Width="250"/>
		</Grid.ColumnDefinitions>
		<!--Command="{Binding SavePictureToTorrentNetwork}"-->
		<Image Grid.Column ="0" Source="{Binding Source}"/>
		<StackPanel Grid.Column ="2">
			<Button Content="Bild laden" Command="{Binding LoadPictureFromFile}"/>
			<Button Content="TorrentInfos aktualisieren" Click="UpdateNetworkInfo"/>
			<Button Content="Bild im Torrentnetz speichern" Click="SaveNetworkExecuteAsync"/>			
			<Button Content="Bild im Torrentnetz finden" Command="{Binding FindPictureInTorrentNetwork}"/>
			<Button Content="Bild runterladen und zusammen setzen" Command="{Binding LoadAndComposePicture}"/>
			<Button Content="Bild lokal abspeichern" Command="{Binding SavePictureToFileSystem}"/>
			<Button Content="Splittest" Command="{Binding SplitTest}"/>
		</StackPanel>
	</Grid>
</Window>
